#ifndef LineLinePosition_H
#define LineLinePosition_H


#include "libalgo/source/algorithms/pointlineposition/PointLinePosition.h"


//Position/intersection of 2 lines
class LineLinePosition
{
        public:
                template <typename Point>
                static unsigned short get2LineSegmentsPosition ( const Point * p1, const Point * p2, const Point * p3, const Point * p4, const TRoundType round );

                template <typename Point>
                static unsigned short get2LineSegmentsPosition2 ( const Point * p1, const Point * p2, const Point * p3, const Point * p4, const TRoundType round );

                template <typename Point>
                static void get2LineSegmentsIntersection ( const Point * p1, const Point * p2, const Point * p3, const Point * p4, typename Point::Type & x_int, typename Point::Type & y_int, unsigned short & inters_exists_code, const TRoundType round );

                template <typename Point>
                static void get2LinesIntersection ( const Point * p1, const Point * p2, const Point * p3, const Point * p4, typename Point::Type & x_int, typename Point::Type & y_int, bool & inters_exists );

                template <typename Point>
                static unsigned short getLineAndLineSegmentPosition ( const Point * p1, const Point * p2, const Point * p3, const Point * p4, const TRoundType round );

                template <typename Point>
                static void getLineAndLineSegmentIntersection ( const Point * p1, const Point * p2, const Point * p3, const Point * p4, typename Point::Type & x_int, typename Point::Type & y_int, unsigned short & inters_exists, const TRoundType round );
};

#include "LineLinePosition.hpp"

#endif
